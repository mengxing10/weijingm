.weixiuaddwrap
  background: #fff
  height: 100%
  flexbox()
  flex-direction(column)
  .container
    width: 100%
    // position: absolute;
    // top: 0
    // bottom px2rem(90)
    // overflow-y: auto;
  .weixiu-item1
    padding 0 px2rem(18)
    clearfix()
    font-size px2rem(30)
    position: relative;
    .title1
      float: left
      line-height: px2rem(88)
      color: #1a1a1a
    .title2
      float: right;
      padding-right: px2rem(42)
      height: px2rem(88)
      line-height: px2rem(88)
      color: #848680
      position: relative;
      &:after
        content:"";
        width: px2rem(25)
        height: px2rem(25)
        border-right:2px solid #c7c7cc;
        border-top:2px solid #c7c7cc;
        display:inline-block;
        vertical-align: middle;
        transform:translate(-50%,-50%) rotate(45deg);
        position:absolute;right:0;top:50%;margin-left: 2px;
        box-sizing:border-box;
  .weixiu-item1+.weixiu-item1
    border-top: 1px solid #f0f0f0
  .weixiu-item2
    min-height: px2rem(195)
    padding px2rem(27) px2rem(18)
    font-size px2rem(30)
    color: #1a1a1a
    .con1
      margin-top 20px
      font-size: px2rem(26)
      color #858689
      line-height: 1.3
      outline none
      &:empty::before
        color:lightgrey;
        content:attr(placeholder)
    .weixiu_img
      display: inline-block;
      width: px2rem(150)
      height px2rem(150)
      border 1px solid #f0f0f0
  .weixiu-item3
    min-height: px2rem(350)
  .weixiu-item-img
    flexbox()
    // justify-content(space-between)
    flex-wrap(wrap)
    .imgAdd
      float left
      width: px2rem(150)
      height px2rem(150)
      margin-right px2rem(20)
      margin-bottom px2rem(20)
      
      position relative
      .img-input
        position absolute
        top 0
        left 0
        width: px2rem(150)
        height px2rem(150)
        opacity 0
      .closeBtn
        position absolute
        top 0
        right 0
        width px2rem(32)
        height px2rem(32)
        background url('./img/close.png') no-repeat
        background-size 100% 100%
        background-color rgba(0,0,0,0.6)
  .fenge
    height: px2rem(30)
    background: #f6f6f6
  .weixiuadd-btn
    position: fixed;
    width: 100%
    height: px2rem(87)
    line-height: px2rem(87)
    text-align: center
    bottom: 0
    font-size: px2rem(36)
    color #fff
    background-color #64a3fb
