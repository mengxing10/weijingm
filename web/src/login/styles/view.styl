.login
    width 100%
    background url('./img/bglogin.jpg') no-repeat
    background-size 100% 100%
    border 0px solid red
    .header
        padding 0 30px
        height 65px
        line-height 55px
        background #0b1a49
        color #919193
        clearfix()
        h1
            float left
            width 100%
            font-size 30px
            color #3a9ae6
            margin-right 50px
            text-align left center
            a
                display inline-block
                line-height 55px
                text-decoration none
                color $normal
                & hover
                    color $normal

   .login-page
        background-color  rgba(255, 255, 255, 20%)
        position  absolute
        left  38%
        top  81px
        width  398px
        height  398px
        .login-form
            left  0%
            top  0%
            width  100%
            height  100%
            button,.checkbox
                font-size 18px
