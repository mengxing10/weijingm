              &:hover
                background #7ac6ff
                color #fff
 
            .message
                font-size  12px
                font-family  "Microsoft YaHei"
                color  rgb(255, 255, 255)
                position  absolute
                left  70px
                top  279.713px
                .pwdlabel
                   font-size  12px
                   label
                      color white
                 



