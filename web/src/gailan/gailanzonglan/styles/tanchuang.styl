.tcpanel
    width 100%
    height 100%
    position fixed
    top:0
    left 0
    .tc_bg
        position fixed
        top:0
        left 0
        right 0
        bottom 0
        background-image linear-gradient(-4deg,rgba(5, 98, 161, 0.5) 0%,rgba(22, 36, 103, 0.5) 100%)
        z-index: 1
    .tc_wrap
          position fixed
          width 90%
          height 85%
          top 60px
          left 5%
          color #f7fafd
          padding 40px 10px
          background-image linear-gradient(#1e4386,#1e4386)
          z-index: 10
          .tc_title
            font-size: 15px
            margin 0px 0px 40px 10px
            padding-left 10px
            h3
              float left
            .close_icon
              float right
              display inline-block
              width 20px
              height 20px
              background: url(./img/close.png) no-repeat
              background-size 100%
              cursor pointer
              &:hover
                  transform rotate(30deg)
          .tc_wrap_body
              background-size 100% 100%
              overflow-x hidden
              overflow-y auto
              height 95%

              .charts-condition
                  width 100%
                  height 80px
                  margin 10px
                  padding-left 10px
                  flexbox()
                  .item
                      width 160px
                      height 65px
                      background #2d56b5
                      flexbox()
                      align-items(center)
                      justify-content(space-between)
                      margin 5px 30px 10px 0px
                      &:hover
                          cursor pointer
                      &.active
                          border 1px solid white
                      h3
                          font-size 24px
                          color white
                          margin-left 20px
                      span
                          font-size 16px
                          color #a3cff6
                          margin-right 20px
              .charts-wrap
                  width 100%
                  margin 10px
                  flexbox()
                  flex-wrap(wrap)
