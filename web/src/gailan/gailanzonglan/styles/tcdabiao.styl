.dabiao-panel
    width: 360px;
    height: 439px;
    margin 10px
    background  rgba(79, 118, 201,0.32);
    h3
        font-size 16px
        color #a3cff6
        text-align left
        margin-left 30px
        height 50px
        line-height 50px
    .charts-body
        width 100%
        height 220px
        display flex
        justify-content space-between
        .item
            width 30%
            margin-top 30px
            h3
                font-size 14px
                color #a3cff6
                display block
                margin-left 0px
                text-align center
            span
                margin-top 30px
                font-size 24px
                text-align center
                color white
                display block
                &.active
                  color red

    .charts-text
        width 100%
        height 169px
        background  rgba(79, 118, 201,0.302);
        p
            height 80%
            font-size 14px
            text-indent 20px
            padding 20px
