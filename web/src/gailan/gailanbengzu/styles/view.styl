.gailanbengzu
    width 100%
    background-size 100% 100%
    padding 0 10px 0 10px
    letter-spacing 1px
    .gailanzonglan-top
        height 50px
        flexbox()
        justify-content(space-between)
        align-items(center)
        color white
        position relative
        h2
            font-size 18px
            margin-left 20px
        .query-data
            font-size 16px
            height 50px
            width 120px
            color #fff
            position absolute
            left 100px
            margin-left 30px
            .ui.fluid.selection.dropdown
                min-height 30px
                margin-top 10px
                padding 6px 0px 6px 10px
                .dropdown.icon
                    padding 5px 10px
            .ui.dropdown
                color #fff
                background #3c75c2
                margin auto
                .default.text
                    color #fff
                .ui.label
                    color #fff
                    background #0a448c
                    font-weight normal
                .menu.visible
                    color #fff
                    background #3c75c2
                    .item
                        color #fff
                        border-bottom 1px solid #5da6ea
                        &:hover
                            background #59a1e1
        span
            font-size 14px
    .gailanzonglan-body
        flexbox()
        justify-content(space-between)
        .gailanzonglan-right,
        .gailanzonglan-left
            width 16%
            flexbox()
            flex-direction(column)
            justify-content(space-between)
            .gailanzonglan-left-panel
                position relative
                h3
                    font-size 14px
                    width 100%
                    height 40px
                    display block
                    text-align left
                    font-weight bold
                    padding 10px
                    padding-left 20px
                    color #a3cff6
                .charts
                    flexbox()
                    flex-direction(column)
                    justify-content(space-between)
                    padding 0px 10px 15px 20px
                    .charts-body
                        width 100%
                    .charts-text
                        width 90%
                        height 100px
                        margin auto
                        margin-top 20px
                        bottom 20px
                        background #153373
                        color white
                        font-size 12px
                        line-height 20px
                        border-radius 5px
                        flexbox()
                        div
                          width 14px
                          height 14px
                          margin-right 5px
                          background  url('./img/up-icon.png') no-repeat
                          background-size 100% 100%
                          &.active
                              background  url('./img/down-icon.png') no-repeat
                              background-size 100% 100%

        .gailanzonglan-center
            width 64%
            flexbox()
            flex-direction(column)
            position relative
            .gailanzonglan-center-mid
                height 68%
            .gailanzonglan-center-bot
                position absolute
                bottom 10px
                width 100%
                height 25%
                flexbox()
                justify-content(space-between)
                .gailanzonglan-center-bot-right,
                .gailanzonglan-center-bot-left
                    width 45%
                    flexbox()
                    flex-direction(column)
                    margin-bottom 30px
                    &:last-child
                        margin-bottom 0px
                    .xiaoxi-item
                        height 40px
                        margin-bottom 20px
                        &:last-child
                            margin-bottom 10px
                        flexbox()
                        .xiaoxi-icon
                            height 38px
                            width 20%
                            padding-left 10px
                            padding-right 10px
                            background #5085c6
                            background-size 100% 100%
                            border-radius 19px
                            color white
                            font-size 12px
                            line-height 38px
                            text-align center
                        .alarmText
                            padding-left 10px
                            height auto!important
                            width 80%
                            .aTime
                                font-size 14px
                                color #a3cff6
                                height 15px
                                margin-bottom 8px
                            .aMsg
                                font-size 14px
                                color white
                                height auto
                                line-height 16px
                                white-space nowrap
                                overflow:hidden;
                                text-overflow: ellipsis;
                                &:hover
                                    white-space normal
                                    overflow:visible;
                .gailanzonglan-center-bot-center
                    border-left 1px dashed #a3cff6
                .gailanzonglan-center-bot-right
                    width 45%
                    flexbox()
                    flex-direction(column)
                    justify-content(space-between)
                    .gongdan-body-2,
                    .gongdan-body-1
                        flexbox()
                        justify-content(space-between)
                        flex-wrap(wrap)
                        height 48%
                        .gongdan-item
                            width 48%
                            text-align center
                            background-color rgba(79, 118, 201, 0.3)
                            flexbox()
                            justify-content(center)
                            align-items(center)
                            .icon
                                width 48px
                                height 48px
                                margin-right 30px
                            .daiban-icon
                                background url('./img/daiban-icon.png') no-repeat center center
                                background-size 100% 100%
                            .yiban-icon
                                background url('./img/yiban-icon.png') no-repeat center center
                                background-size 100% 100%
                            .jiankang-icon
                                background url('./img/jiankang-icon.png') no-repeat center center
                                background-size 100% 100%
                            .jiedian-icon
                                background url('./img/jiedian-icon.png') no-repeat center center
                                background-size 100% 100%
                            .item
                                height auto
                                h3
                                    font-size 14px
                                    color #a3cff6
                                    line-height 26px
                                span
                                    font-size 20px
                                    color #fff
                                    sub
                                        font-size 12px
