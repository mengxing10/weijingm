.chaobiaodan
    width 100%
    background-size 100% 100%
    padding 0 10px 10px 10px
    letter-spacing 1px
    color white
    .chaobiaodan-header
        .bengzhanxuanze
            font-size 16px
            width 100%
            height 50px
            margin-bottom 20px
            border-bottom 1px solid #5085c6
            .item
                text-align center
                line-height 50px
                margin-left 30px
                display inline-block
                width auto
                cursor pointer
                &.active
                   cursor pointer
                   border-bottom 2px solid #fff
                &:hover
                   cursor pointer
        .query-condition
          display flex
          flex-align center
          align-items center
          flex-pack flex-start
          justify-content flex-start
          font-size 16px
          color #969696
          position relative
          margin-top 10px
          padding-bottom 10px
          .bengzu
              width 250px
              margin 0 10px 0 0px
              display flex
              flex-align center
              align-items center
              flex-pack flex-start
              justify-content flex-start
              label
                  color white
              .query-value
                  font-size 14px
                  height 30px
                  input
                        border-radius 3px
              .ui.dropdown
                  color #fff
                  min-width  9em
                  background #3c75c2
                  min-height: 30px;
                  padding-top: 0;
                  padding-bottom: 0;
                  line-height: 30px;
                  .default.text
                      color #fff
                  .ui.label
                      color #fff
                      background #0a448c
                      font-weight normal
                  .menu.visible
                      color #fff
                      background #3c75c2
                      .item
                        color #fff
                        border-bottom 0 solid #5da6ea
                        &:hover
                            background #59a1e1
                  .dropdown.icon
                      top 7px
                      margin 0
                      padding 0
              .ui.selection.dropdown
                  .menu > .item
                      border-top-color #5da6ea


          .shijian
              width 600px
              margin 0 10px 0 10px
              display flex
              flex-align center
              align-items center
              flex-pack flex-start
              justify-content flex-start
              label
                  margin 0 10px
                  color white
          .jiesuan
              font-size 16px
              color white
              width 120px
              margin 0 10px 0 10px
              .ui.checkbox
                  color white
                  label
                      margin 0 10px
                      color white
                      font-size 16px
          .xinzeng
              width 90px
              height 30px
              position absolute
              right 10px
              margin-left 10px
              line-height 30px
              text-align center
              background #254394
              color #fff
              border-radius 3px
              cursor pointer
              &:hover
                  background #7ac6ff
              &.gray,
              &.gray:hover
                  background #c6c6c6
    .chaobiaodan-body
        width 100%
        height 80%
        overflow-y auto
        margin-top 20px
        .chaobiao_table_input
            color #fff
            background #3c75c2
        .chaobiao_table_chakan
            color #fff
            cursor pointer
            &:hover
                color #7ac6ff
        .chaobiaolist
            width 100%
        .chaobiaobody
            width 100%
            .fenge
                height 30px
                h3
                    font-size 16px
                    line-height 30px
                    padding-left 20px
            .caozuo
                height 50px
                display flex
                flex-align center
                align-items center
                flex-pack flex-start
                justify-content center
                .item
                    width 90px
                    height 30px
                    margin-left 10px
                    line-height 30px
                    text-align center
                    background #254394
                    color #fff
                    border-radius 3px
                    cursor pointer
                    &:hover
                        background #7ac6ff
                    &.gray,
                    &.gray:hover
                        background #c6c6c6
