.fix:after
    content: ""
    display: block
    height: 0
    clear: both
    visibility: hidden
.fix
    *zoom: 1;
.table-chaobiao
    width 100%
    height auto
    background-size 100% 100%
    position: relative;
    overflow-y auto
    .weixiu-title
        height 50px
        width 90%
        flexbox()
        margin 0 30px 0 20px
        justify-content(space-between)
        align-items(center)
        font-size 20px
        color #fff
        text-indent 10px
    .query-condition
        display flex
        margin-left 2%
        flex-align center
        align-items center
        flex-pack flex-start
        justify-content flex-start
        font-size 16px
        color #969696
        position relative
        margin-bottom 10px
        margin-top 10px
        padding-bottom 10px
        border-bottom 2px solid #7ac6ff
        label
            margin 0 10px
            color white
        .query-name
            font-size 16px
            margin-right 10px
            color white
        .query-value
            font-size 14px
            height 30px
            input
                  border-radius 3px
        .dropdown
          min-width 9em
          min-height: 30px
          line-height: 30px
          padding-top 0
          padding-bottom 0
          .dropdown.icon
            width 20px
            right -38px
            top 7px
            margin 0
            padding 0
        .query-commit
            width 90px
            height 30px
            margin-left 10px
            line-height 30px
            text-align center
            background #254394
            color #fff
            border-radius 3px
            cursor pointer
            &:hover
                background #7ac6ff
            &.gray,
            &.gray:hover
                background #c6c6c6
        .query-btn
            width 90px
            height 30px
            line-height 30px
            text-align center
            background #254394
            color #fff
            border-radius 3px
            cursor pointer
            position absolute
            right 2%
            &:hover
                background #7ac6ff
            &.gray,
            &.gray:hover
                background #c6c6c6
    .weixiu-table
        width 96%
        margin-left 2%
        .xinzeng-btn
          text-align: right
          margin-bottom: 20px
          margin-top 20px
          span
            display: inline-block;
            cursor:pointer
            width: 100px
            height: 35px
            line-height: 35px
            text-align: center
            background-color: #2a57ff
            border-radius: 3px
            color: #fff
            font-size 16px
          span:hover
            background-color: #2c8cf9
    .modal-xinzeng
     position: absolute
     top 10px
     left: 0
     right 0
     bottom 0
     overflow: auto;
     padding 10px
     background-color: #005dac
     .title
        text-align: right
        padding: 10px
        .btn
          cursor pointer
          display: inline-block;
          width: 70px
          margin 0 10px
          height: 30px
          line-height: 30px
          background-color: #2c8cf3
          color: #fff
          text-align: center
          border-radius: 5px
          font-size: 15px
          &:hover
            background-color: #2a57ff
     .gongdan-content
       width: 90%
       margin 0 auto
       padding-bottom 60px
       font-size: 16px
       .ul_1b
         border-bottom: 1px solid #ccc
         padding-bottom 20px
       .ul_1
         margin-top 20px
         .items
           float: left
           width: 100%
           padding: 10px 0
           color #fff
           .div1
             float left
             width: 15%
             padding 6px
             text-align: right;
             margin-top 6px
             .xing
               display: inline-block
               margin-right: 5px
               vertical-align: top;
               color: #f00
               font-size: 26px
           .div2
             float left
             width: 30%
             text-align left
             input[type='text'],textarea
               display: inline-block;
               width 70%
               outline: none
               border: 1px solid #ccc
               padding 8px
               border-radius: 3px
               background: rgba(79, 118, 201, 0.5);
             .label
               display: inline-block;
               margin-left: 13px
               margin-top: 6px
             .span-btn
               cursor pointer
               display: inline-block;
               margin-left: 10px
               margin-top 6px
               vertical-align top
             .span-btn.span-btn-b
               border 1px solid #ccc
               margin-top 0
               background: #c9c9c9
               border-radius: 2px
               padding 5px 30px
             .selectsMul
               display: inline-block;
               width 70%
               height: 80px
               padding 6px
               border 1px solid #c6c6c6
               background-color #fff
               border-radius 3px
               overflow: auto
               color: #333
               .selects_item
                 display: inline-block
                 padding 3px 5px
                 background-color: rgba(0,0,0,0.08)
                 margin: 5px
                 font-size 13px
                 i
                   display: inline-block;
                   width: 10px
                   height: 10px
                   margin-left: 5px
                   background: url(img/u9571.png) no-repeat
                   background-size 100%
             .sousuo
               display: inline-block
               width 100px
               height: 36px
               line-height 36px
               margin-left 5px
               border-radius 3px
               text-align: center
               background-color #2c8cf3
               color #fff
           .sousuo_con
             span
               display block
               margin-bottom: 10px
           .div_time
             margin-top 3px
           .div3
             float left
             width 60%
             textarea
               display: inline-block;
               width: 100%
               padding 5px
               background-color: transparent
               border: 1px solid #ccc
               height: 6em
               color #fff
           .div_fujian
             float left
             width 20%
             height: 6em
             padding-top: 30px
             >span
               display: block;
               padding 5px 0
       .table-title
         margin 20px 0
         color #fff
         font-size: 18px
       .jiesuandan-con
         margin-bottom 10px
       .content-botm-btn
         cursor pointer
         display: block;
         width 130px
         color #fff
         background-color #2a57ff
         border-radius: 5px
         padding 13px 0
         margin:50px auto;
         text-align: center
         &:hover
           background-color #2c8cf9
     .query-value
       float: left
       height 30px
     .dropdown
       min-height: 30px
       line-height: 30px
       padding-top 0
       padding-bottom 0
    .gongdan-modal.gongdan-chakan
       color #fff
       .chakan_container
         width: 90%
         margin: 0 auto
         .chakan_title
           padding: 10px 0
           >span
             display inline-block
             margin-top 6px
             font-size: 16px
           .title_bg
             font-size: 18px
             margin-right: 10px
           .chakan_title_btns
             float right
             span
               cursor pointer
               display: inline-block;
               padding: 6px 15px
               background #2c8cf9
               border-radius: 4px
               margin-right: 20px
               font-size: 14px
               color #fff
         .chakan_item
           padding-top 16px
           padding-bottom 20px
           border-top: 1px solid #dfdfdf
           .chakan_item_con
             margin-top 20px
             line-height: 1.6
             font-size: 14px
             .w_3
               float: left
               width: 33%
               padding: 10px 0
               span
                 display: inline-block;
                 width: 60%
                 font-size: 14px
               .w_3_span1
                 width: 30%
             .w_1
               width 100%
               .w_1_span1
                 width 10%
                 vertical-align top
               .w_1_span2
                 width 60%
                 position relative
                 .span-btn
                   position absolute
                   top 24px
                 .selectsMul
                   margin-left: 160px
                   .selects_item
                     width auto
                     padding 5px 7px
                     margin-left: 5px
                     margin-bottom: 5px
                     background-color rgba(0,0,0,0.1)
                     i
                       display: inline-block
                       width 10px
                       height: 10px
                       margin-left: 5px
                       background: url(img/u9571.png) no-repeat
                       background-size 100%
                 .div_file
                   margin-left 0
                   left 0
                   input[type='file']
                     top 0
                     left 0
                     width: 150px
               .w_1_textarea
                 width: 70%
                 height: 100px
                 background-color: #19427d
                 border-radius: 3px
                 padding: 5px
               .span-btn
                 cursor pointer
                 width 150px
                 text-align: center;
                 margin-top -25px
                 border: 1px solid #ccc
                 background: #c9c9c9;
                 border-radius: 2px;
                 padding: 5px 30px;
               .div_file
                  margin-left: 10%
                  input[type='file']
                    top:-20px
            .guocheng
              list-style-image: url('img/u7266.png')
              li
                padding: 10px 0
                span
                  display: inline-block;
                  width: 15%
                .span_w
                  width 45%
           .chakan_item_con1
             padding-right 15%
             .fujian
               margin-top: 20px
               span
                 cursor pointer
           .chakan_item_con2
             padding-left 5%
.pages
  margin-top: 50px
