
@require '../view'

.tbdata
    position relative
    min-height 800px
    height auto!important
    width 100%
    .gfybiaogeguanli-body
        margin auto
        width 90%
        height 70%
        margin-top 35px
        overflow-y auto
        color white
        h2
            margin 0px 0 10px
            font-size 24px
            color $base
        .gfybiaogeguanli-choice
            width 100%
            height 40px
            margin-top 20px
            .gfybiaogeguanli-choice-left
                float left
                span
                    font-size 16px
                    margin-top 5px
                .dropdown
                    font-size 16px
                    height 30px
            .gfybiaogeguanli-choice-right
                float right
                line-height 40px
                font-size 16px
                margin-right 5px
                span
                    margin-right 20px
                label
                    font-size 16px
                    color white

        .gfybiaogeguanli-table
            margin-top 40px
            width 100%
