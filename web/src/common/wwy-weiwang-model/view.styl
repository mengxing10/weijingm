.weiwang
    width 100%
    min-height 790px
    height auto!important
    background url('./img/wwybg.png') no-repeat
    background-size 100% 100%

    .top-charts
        height 50px
        width 90%
        flexbox()
        margin 0 30px 0 40px
        justify-content(space-between)
        align-items(center)
        font-size 20px
        color #fff
        
        text-indent 10px
        i
            font-size 36px
            margin 0 10px
    .charts-wrap
        flexbox()
        justify-content(space-between)
        width 100%
        height 700px
        position relative
        .left-charts
            width 300px
        .main-svg
            height 700px
            background url('./img/svgbg.png') no-repeat
            background-size 100% 100%
        .right-charts
            width 300px
