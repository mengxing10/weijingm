.el-pager
    margin 20px 0
    ul
        display flex
        flex-align center
        align-items center
        flex-pack center
        justify-content center

        li
            padding 5px 8px
            margin-right 10px
            background #f2f4f6
            color #5c5c5c
            cursor pointer
            border-radius 3px
            font-size 16px
            &.active,
            &:hover
                background $normal
                color #fff
                background #3a9ae6
                font-size 16px
            &.first
                padding-left 1px
            &.last
                padding-right 1px
