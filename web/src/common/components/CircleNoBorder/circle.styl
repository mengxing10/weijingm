.circle-wrap
    width 300px
    height 240px

    position relative
    padding-bottom 14px
    border 1px solid transparent

    h3
        height 44px
        line-height 44px
        color #fff
        background url('./h3bg.png') no-repeat center center
        background-size 100% 100%
        box-shadow: 0px 1px 5px 0px rgba(36, 77, 108, 0.75);
        text-align center
        margin-bottom 10px

        font-size 18px
    canvas
        display block
        margin 0 auto
    .circle-view
        position relative
        margin 0 auto
        text-align center
        p, span
            position absolute
            width 100%
            display block
            text-align center
            color #fff
            font-size 14px
        p
            top 45%
            height 66px
            margin-top -33px
            font-size 46px
            span
                top 0%
                font-size 46px

        span
            top 70%
