.system-model
    width 100%
    min-height 790px
    height auto!important
    background url('./img/wwybg.png') no-repeat
    background-size 100% 100%

    .top-charts
        height 50px
        width 90%
        flexbox()
        margin 0 30px 0 40px
        justify-content(space-between)
        align-items(center)
        font-size 20px
        color #fff
        
        text-indent 10px
        .top-e
            flexbox()
            justify-content(flex-end)
            align-items(center)
            font-size 24px
            .top-e1
                  flexbox()
                  justify-content(flex-start)
                  align-items(center)
                  font-size 14px
                  background-color: rgba(0, 255, 255,0.271);
                  color:#fff
                  border-radius: 20px;
                  width: 218px;
                  height: 38px;
                  margin 0 17px 0 0px
                  .icon1
                      background url('./img/wwyhome-icon.png') no-repeat center center
                      margin 0 4px 0 30px
                      width: 25px;
                      height: 25px;
                  .icon2
                      background url('./img/wwyyd-icon.png') no-repeat center center
                      margin 0 4px 0 30px
                      width: 25px;
                      height: 25px;
            .top-e2
                  flexbox()
                  justify-content(flex-start)
                  align-items(center)
                  font-size 14px
                  background-color: rgba(0, 255, 255,0.271);
                  color:#fff
                  border-radius: 20px;
                  width: 218px;
                  height: 38px;
                  margin 0 7px 0 0px
                  .icon3
                      background url('./img/wwysd-icon.png') no-repeat center center
                      margin 0 4px 0 30px
                      width: 25px;
                      height: 25px;
                  .icon4
                      background url('./img/wwyfs-icon.png') no-repeat center center
                      margin 0 4px 0 30px
                      width: 25px;
                      height: 25px;








        i
            font-size 36px
            margin 0 10px



    .charts-wrap
        flexbox()
        justify-content(flex-start)
        width 100%
        height 700px
        position relative
        .left-charts
            width 300px
        .main-svg
            margin 0 0 0 30px
            background url('./img/svgbg.png') no-repeat
            background-size 100% 100%
            height 700px
