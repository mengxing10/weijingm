 @require '../../../common/style/common'

.gw-edittable
    width 100%
    overflow-x auto
    .gw-edittable-body
        .gw-tbody
            text-align center
            line-height 38px
            height 38px
            min-width 100%
            border-bottom 1px solid #ebebed

            div
                height 38px
                display inline-block
                line-height 38px
                font-size 16px
                position relative
                overflow-y hidden
                overflow-x auto

                &.nodisplay
                  display none
                &:first-child
                    width 10%
                span
                    color #e0e0e0
                    margin-left 6px
                input
                    text-align center
                    width 80%
                    height 80%
                    border none
                    border-bottom 1px solid #ccc
                    overflow-x auto

            .gw-tbody-optli
                flexbox()
                justify-content(center)
                align-items(center)
                display inline-block
                div
                    font-size 14px
                    width 45%
                    height 25px
                    margin-right 5px
                    line-height 30px
                    text-align center
                    background $base
                    color #fff
                    border-radius 3px
                    cursor pointer
                    &:hover
                        background #7ac6ff
                    &.gray,
                    &.gray:hover
                        background #c6c6c6

        .gw-tbody-add
            white-space  nowrap
            text-align center
            line-height 38px
            height 38px
            min-width 100%
            border-bottom 1px solid #ebebed

            div
                width 106px
                height 30px
                margin auto
                line-height 30px
                text-align center
                background $base
                color #fff
                border-radius 3px
                cursor pointer
                &:hover
                    background #7ac6ff
                &.gray,
                &.gray:hover
                    background #c6c6c6
        .gw-thead
            white-space  nowrap
            text-align center
            line-height 38px
            height 38px
            min-width 100%
            border-bottom 1px solid #ebebed
            div
                flexbox()
                align-items(center)
                cursor pointer
                height 38px
                display inline-block
                line-height 38px
                font-size 16px
                position relative
                &.nodisplay
                  display none
                &:first-child
                    width 10%
                &:hover
                    background #d1cece
                span
                    color rgba(0, 0, 0,0)
                    position absolute
                    right 0px
                    &.active
                      color rgba(0, 0, 0,1)
                    &.dbactive
                      transform:rotate(-180deg);
                      -ms-transform: rotate(180deg);		/* IE 9 */
                      -webkit-transform: rotate(180deg);	/* Safari and Chrome */
                      -o-transform: rotate(180deg);		/* Opera */
                      -moz-transform: rotate(180deg);		/* Firefox */
