.report
    width 100%
    height auto!important
    //background url('./img/sybeijing.png') no-repeat
    background-size 100% 100%
    font-size 18px
    div
        font-size 16px
    .weixiu-title
        height 50px
        width 90%
        flexbox()
        margin 0 30px 0 20px
        justify-content(space-between)
        align-items(center)
        font-size 20px
        color #fff

        text-indent 10px
    .query-condition
        display flex
        margin-left 2%
        flex-align center
        align-items center
        flex-pack flex-start
        justify-content flex-start
        flex-wrap  wrap
        font-size 16px
        color #969696
        position relative
        margin-bottom 10px
        margin-top 10px

        label
            margin 0 10px
            font-size 16px

        .query-name
            font-size 16px
            margin-right 10px
        .query-value
            font-size 14px
            height 30px
        .ui,.dropdown
            min-width 130px
            height 26px
            line-height 30px
            margin-top 0px
            position relative
            font-size 12px
            .text
                height 30px
                margin-left 10px
                padding-bottom 5px
                padding-top -5px
                margin-top 0px
                position absolute
                font-size 16px
                top 7px
                left 10px
            .icon
                min-width 30px
                min-height 30px
                padding 5px
            a
                height 23px
                .label
                  margin-bottom 8px

        .query-commit
            width 90px
            height 30px
            margin-left 10px
            line-height 30px
            text-align center
            background #3a9ae6
            color #fff
            border-radius 3px
            cursor pointer
            &:hover
                background #7ac6ff
            &.gray,
            &.gray:hover
                background #c6c6c6
        .query-btn
            width 90px
            height 30px
            line-height 30px
            text-align center
            background #3a9ae6
            color #fff
            border-radius 3px
            cursor pointer
            position absolute
            right 2%
            &:hover
                background #7ac6ff
            &.gray,
            &.gray:hover
                background #c6c6c6
        .right-btn
            position absolute
            right 2%
                
    .weixiu-table
        width 96%
        height 800px
        margin-left 2%
