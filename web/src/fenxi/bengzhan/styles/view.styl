.bengzhanfenxi
    //background url('./img/sybeijing.png') no-repeat
    background-size 100% 100%
    .bengzhanfenxi-top
        height 50px
        flexbox()
        justify-content(space-between)
        align-items(center)
        font-size 20px
        color #fff
        margin 10px 20px 10px 10px
        // text-indent 10px  取消，影响datepicker
        .query-data
            font-size 16px
            height 50px
            width 120px
            color #fff
            margin-left 30px
            .ui.fluid.selection.dropdown
                min-height 30px
                margin-top 10px
                padding 6px 0px 6px 10px
                .dropdown.icon
                    padding 5px 10px
            .ui.dropdown
                color #fff
                background #3c75c2
                margin auto
                .default.text
                    color #fff
                .ui.label
                    color #fff
                    background #0a448c
                    font-weight normal
                .menu.visible
                    color #fff
                    background #3c75c2
                    .item
                        color #fff
                        border-bottom 1px solid #5da6ea
                        &:hover
                            background #59a1e1
        .labStyle
            line-height 50px
        .query-condition
            flexbox()
            justify-content(flex-start)
            align-items(center)
            font-size 16px
            position relative
            margin auto
            label
                margin 0 10px
                color #fff
            .query-name
                font-size 16px
                margin-right 10px
            .query-value
                font-size 14px
            .daily-wrap
                margin auto
                border 1px solid #ebebed
                width 216px
                height 28px
                line-height 28px
                inline-flex()
                justify-content(flex-start)
                align-items(center)
                font-size 14px
                .icon.calendar
                    margin 0 5px
                    height auto
                >div
                    display inline-block
                input
                    border none
                    width 90px
        .query-btn
            width 106px
            height 30px
            font-size 16px
            line-height 30px
            text-align center
            background #2c8cf9
            color #fff
            border-radius 3px
            cursor pointer
            &:hover
                background #2a57ff
            &.gray,
            &.gray:hover
                background #c6c6c6
    .bengzhanfenxi-wrap
        flexbox()
        justify-content(space-between)
        margin 10px 20px 10px 10px
        min-height 700px
        .bengzhanfenxi-left
            width 68%

            .left-top-panel
                height 80px
                margin 10px auto 10px 10px
                flexbox()
                justify-content(space-between)
                color white
                .item
                    width 22%
                    background #1b5997
                    text-align center
                    h3
                        font-size 14px
                        margin-top 10px
                        margin-bottom 20px
                    span
                        font-size 26px
            .left-middle-panel
                height 300px
                background rgba(29,94,163,0.2)
                margin 0 auto 20px auto
                h3
                    color white
                    font-size 16px
                    margin-left 20px
                    text-align left
                    line-height 46px
            .left-bottom-panel
                height 300px
                background rgba(29,94,163,0.2)
                flexbox()
                justify-content(space-between)
                h3
                    color white
                    font-size 16px
                    text-align left
                    margin-left 20px
                    line-height 46px
                .right-panel
                    width 49%
                .left-panel
                    width 49%

        .bengzhanfenxi-right
            width 30%
            margin 10px auto 10px auto
            background rgba(29,94,163,0.2)
            .title
                font-size 18px
                color white
                margin 10px auto 20px 30px
            .right-panel-wrap
                width 100%
                margin 0px 5px 0px 5px
                .panel-item
                    height 46px
                    flexbox()
                    justify-content(space-between)
                    margin-bottom 10px
                    i
                        background #54c0f1
                        width 20px
                        height 20px
                        border-radius 10px;
                        line-height 20px
                        text-align center
                        margin auto 0px auto 0px

                     h3
                         color white
                         font-size 16px
                         width 25%
                         text-align center
                         line-height 46px

                     div
                         width 38%
                         line-height 46px
                     span
                         color white
                         font-size 14px
                         width 20%
                         line-height 46px
                         float right
